#include<stdio.h>
int main()
{
    int a[3][3],i,j,b[3][3],r[3][3];
    
    printf("enter the elements in first matrix\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            scanf("%d",&a[i][j]);
        }

    }
    
    printf("enter the second matirx\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            scanf("%d",&b[i][j]);
        }
    }
    
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            r[i][j]=a[i][j]+b[i][j];
        }
    }
    
    printf("the resultant matrix is\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            printf("%d\t",r[i][j]);
        }
        printf("\n");
    }

}
